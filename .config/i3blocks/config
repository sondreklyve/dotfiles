# My i3blocks config file
#
# This is intended for use with blocklets from
# https://github.com/vivien/i3blocks-contrib
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# env-var for location of the repo?
# env-vars for the settings in this file?
command=$HOME/.config/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

# Mediaplayer
[mediaplayer]
instance=spotify
interval=1
signal=10

# Week number
[week]
label=WEEK 
command=date '+%V'
interval=once
interval=1

# Volume indicator
[volume]
label=VOL 
interval=once
signal=2
STEP=5%

# Keyboard layout
[key_layout]
label=Layout
interval=1

# Temperature
#[temperature]
#label=TEMP 
#interval=10

# Date Time
[time]
command=date '+%Y-%d-%m %H:%M:%S'
interval=1
